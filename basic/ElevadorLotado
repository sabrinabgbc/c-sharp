using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

  class Program
  {
      static void Main(string[] args)
      {
          //variável do número de casos convertida de string para int
          int caso = int.Parse(Console.ReadLine());

          for (int y = 1; y <= caso; y++)
          {
              //pego o valor da primeira linha
              string entradas = Console.ReadLine();

              //separa os valores da entrada em variáveis
              //as entradas são strings, assim transformamos elas em int
              string[] variaveis = entradas.Split(' ');
              int totalAndar = int.Parse(variaveis[0]);
              int totalCapacidadeElevador = int.Parse(variaveis[1]);
              int totalPessoas = int.Parse(variaveis[2]);

              //atribuindo as entradas da segunda linha nas variáveis
              string andar = Console.ReadLine();
              string[] andares = andar.Split(' ');

              int[] totalAndares = new int[totalPessoas];
              var totalAndaresList = totalAndares.ToList();

              bool andaresValidados = false;
              int energiaTotal = 0;

              //ordena lista de totalAndaresList
              totalAndaresList.Sort();
              totalAndaresList.Reverse();

              for (int k = 0; k < totalAndaresList.Count; k++)
              {
                  totalAndaresList[k] = Convert.ToInt32(andares[k]);
              }

              for (int i = 0; i < totalPessoas; i++)
              {
                  if (totalAndaresList[i] > totalAndar)
                  {
                      andaresValidados = false;
                      break;
                  }
                  else
                  {
                      andaresValidados = true;
                  }
              }

              if (andaresValidados == true)
              {
                  while (totalAndaresList.Count != 0)
                  {
                      energiaTotal += (totalAndaresList[0] * 2);

                      if (totalAndaresList.Count >= totalCapacidadeElevador)
                      {
                          totalAndaresList.RemoveRange(0, totalCapacidadeElevador);
                      }
                      else
                      {
                          totalAndaresList.RemoveRange(0, totalAndaresList.Count);
                      }
                  }

                  Console.WriteLine(energiaTotal);
              }
          }

          Console.WriteLine("Pressione enter para encerrar...");
          Console.ReadLine();
      }
  }
